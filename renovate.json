{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests",
    "mergeConfidence:all-badges"
  ],
  "timezone": "Europe/Helsinki",
  "schedule": [
    "* * * * 0,6"
  ],
  "updateNotScheduled": false,
  "automergeSchedule": [
    "* * * * 0,6"
  ],
  "semanticCommits": "enabled",
  "ignorePaths": [
    "workspace-hack/**",
    "**/fixtures/**",
    "**/vendor/**"
  ],
  "addLabels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "groupName": "patch updates",
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "pin",
        "pinDigest"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "minor",
        "major"
      ],
      "automerge": false
    },
    {
      "matchDepTypes": [
        "action"
      ],
      "automerge": true
    },
    {
      "matchDatasources": [
        "crate"
      ],
      "rangeStrategy": "bump"
    },
    {
      "matchDatasources": [
        "crate"
      ],
      "matchCurrentValue": "/^\\d+(\\.\\d+)?$/",
      "rangeStrategy": "update-lockfile"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true
  }
}
